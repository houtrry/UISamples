<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.houtrry.uisamples.ui.MainActivity">

    <Button
        android:id="@+id/btn_viewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewPager相关"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btn_recycler"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecyclerView相关"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btn_nested_scroll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_viewPager"/>

    <Button
        android:id="@+id/btn_nested_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecyclerView相关"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btn_basic_library_test"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_recycler"/>

    <Button
        android:id="@+id/btn_basic_library_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BasicLibrary测试相关"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_nested_scroll"/>

</android.support.constraint.ConstraintLayout>
