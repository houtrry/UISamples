<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.het.recyclerviewlibrary.view.activity.RecyclerViewActivity">

    <Button
        android:id="@+id/btn_snap_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SnapHelper的简单使用"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btn_custom_snap_helper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_custom_snap_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义SnapHelper"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_snap_helper"/>

</android.support.constraint.ConstraintLayout>
